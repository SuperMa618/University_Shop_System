<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.java.mapper.StudentMapper">

	<resultMap type="com.java.po.Student" id="studentResultMap">
		<id property="id" column="id" />
		<result property="username" column="username" />
		<result property="studentid" column="studentid" />
		<result property="password" column="password" />
		<result property="sex" column="sex" />
		<result property="images" column="images" />
		<result property="birthdate" column="birthdate" />
		<result property="phone" column="phone" />
		<result property="address" column="address" />
		<result property="college" column="college" />
		<result property="inclass" column="inclass" />
		<result property="qq" column="qq" />
		<result property="state" column="state" />
		<result property="updatetime" column="updatetime" />
		<result property="reporttotime" column="reporttotime" />
	</resultMap>

	<!-- 查询 多条数据 -->
	<select id="findList" parameterType="Map" resultType="Student">
		select * from student where 1 = 1
		<if test="username != null and username != ''">
			and username like '%${username}%'
		</if>
		<if test="studentid != null and studentid != ''">
			and studentid = #{studentid}
		</if>
		<if test="sex != null and sex != ''">
			and sex = #{sex}
		</if>
		<if test="phone != null and phone != ''">
			and phone like '%${phone}%'
		</if>
		<if test="inclass != null and inclass != ''">
			and inclass like '%${inclass}%'
		</if>
		<if test="state != null and state != ''">
			and state = #{state}
		</if>
		order by studentid
		<if test="page!=null and limit!=null">
			limit #{page},#{limit}
		</if>

	</select>

	<select id="MaxStudentId" resultType="Integer">
		select max(studentid) from
		student
	</select>

</mapper>